{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": false, // must be false for mantine ui theme usage
    "noImplicitAny": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
